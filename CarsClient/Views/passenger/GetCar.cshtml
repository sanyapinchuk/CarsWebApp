   width: 100%;
   }

   #desktop:checked ~ #slider{ 
   max-width: 700px; 
   }

   
   @ViewData["carStyles1"]


   label, a{ 
   cursor: pointer;
   }

   .all input, #slider input{ 
   display: none;
   }

   
   @ViewData["carStyles2"]

