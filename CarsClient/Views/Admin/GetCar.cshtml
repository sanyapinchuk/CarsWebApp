@section AfterBody{
	<div id="pop-order">
		<div id="order-all"></div>
		<div id="add_place">
			<div class="external_order">					
				<form id= "order-form" class="order" method="POST" action="@ViewData["pathPrefix"]../php/handler.php">			
					<i id="icon-close" class="fas fa-times"></i>	
					<div class="form-group" id="span">
						Оставить заявку
					</div>
					<div class="form-group">						
						<input type="text" name="name" class="order-control" placeholder="Имя *" required>
						<input type="email" name="email" class="order-control" placeholder="Электронная почта *" required>
					</div>
					<div class="form-group">
						<input type="tel" name="phone" class="order-control" placeholder="Телефон">
					</div>
					<button type="submit" style="cursor: pointer;">Отправить</button>
				</form>	
			</div>
		</div>	
	</div
	<script src="@ViewData["pathPrefix"]../js/make_order.js"></script>
	<script src="@ViewData["pathPrefix"]../js/car_parameters.js"></script>
}

@section Headers{
    <style>
			
		#slider { 
			 position: relative;
			 text-align: center;
			 top: 10px;
			 width:100%; 
		 }

		 #slider{ 
			margin: 0 auto;
		 }

		 #overflow{ 
			width: 100%;
			overflow: hidden;
		 }

		 article img{ 
			width: 100%;
		 }

		 #desktop:checked ~ #slider{ 
			max-width: 700px; 
		 }


		 label, a{ 
		 cursor: pointer;
		 }

		 .all input, #slider input{ 
		 display: none;
		 }


		 #controls{ 
		 margin: -40% 0 36% 0;
		 width: 100%;
		 height: 20px;
		 }

		 @ViewData["carStyles"]


		 #active label{ 
		 border-radius: 0; 
		 display: inline-block; 
		 width: 80px;
		 height: 60px;
		 margin-bottom: 2px;
		 margin-top: 0px;
		 background-size: cover;
		 opacity: 0.6;	
		 }

		 #active{ 

		 text-align: center;
		 }

		 #active label:hover{ 
		 opacity: 1;
		 }

		 #slides {
			margin-bottom: 15px;
		 }

		 #slides .image{ 
		 transition: all 500ms cubic-bezier(.94,.68,.44,1.01);
		 }

		 #controls label:hover{ 
		 opacity: 0.6;
		 }

		 #controls label{ 
		 transition: opacity 0.2s ease-out;
		 }
		 @@media (max-width: 877px)
		 {
			.__left{
			   margin-left: 15px;
			}
			.__right{
			   margin-right: 15px;
			}
		 }

	</style>
}