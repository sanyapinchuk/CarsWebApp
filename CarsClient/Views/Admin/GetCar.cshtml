@using CarsClient;
@model CarsClient.Models.Dto.CarFullInfo;

@{
	ViewData["Title"] = Model.ModelName + " купить в Минске недорого – Цена с учетом доставки";
	ViewData["Description"] = Model.Description + " | " + GlobalVariables.Postfix;
	ViewData["activePage"] = "passengerPage";
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["pathPrefix"] = "../../";
}

	<div class="panel commercial">	
		<h1>@Model.ModelName</h1>
	</div>
	<a href="../update/@Model.Id" id="eddit_button">
		<i class="far fa-edit"></i>
	</a>
	
	<div class="car_information">	
		<div class="all">
			<input checked type="radio" name="respond" id="desktop">
			<div id="slider">
			@for(int i= 1; i< Model.Images.Count+1; i++)
				{
					if (i == 1)
					{
						<input checked type="radio" name="slider" id="switch_1">
					}
					else{
						<input type="radio" name="slider" id= "switch_@i">
					}
				}
				<div id="slides">
					<div id="overflow">
						<div class="image">
							@foreach(var item in Model.Images)
							{
								<article><img src="@ViewData["pathPrefix"]../images/cars/@item.Path"></article>
							}
						</div>
					</div>
					<div id="__left_block"></div>
					<div id="__right_block"></div>
				</div>
						
				<div id="controls">
					@for(int i= 1; i< Model.Images.Count+1; i++)
					{
						<label for="switch_@i"></label>
					}
				</div>
				<div id="active">
					@for(int i= 1; i< Model.Images.Count+1; i++)
					{
						<label 	style= "background-image: url('@ViewData["pathPrefix"]../images/cars/@Model.Images[i-1].Path');" for="switch_@i"></label>
					}
				</div>		
			</div>			
		</div>
		<table class="info">
			<tr style="top:-10%;">
				<td style="vertical-align:bottom;">
					<div id="model">@Model.ModelName</div>
					<div id="price"> Цена с учётом доставки: <b>$@Model.Price.ToString("N", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</b></div>
					<button id="make-order">Заказать</button>		
				</td>  
			</tr>
		</table>
	</div>	
	<div id="box_characterstics">
		<div id="car_characterstics">
			<div class= "backgr_name">
				<div id="tech_ch">ТЕХНИЧЕСКИЕ ХАРАКТЕРИСТИКИ</div>
			</div>					
			<ul>				
				<li> <img src="@ViewData["pathPrefix"]../images/icons/brand.png">Марка <span>@Model.CompanyName</span></li>
				<li> <img src="@ViewData["pathPrefix"]../images/icons/color.png">Цвет <span>@Model.Color</span></li>
				<li> <img src="@ViewData["pathPrefix"]../images/icons/calendar.png">Год производства <span>@Model.ProductionYear</span></li>
				@foreach(var item in Model.Properties)
				{
					if (item.IsKeyProperty)
					{
						<li> <img src="@ViewData["pathPrefix"]../images/icons/road.svg">@item.Property <span>@item.Value</span></li>
					}
				}
			</ul>
			<div class="add_info" id="add_info">
				@foreach(var item in Model.Properties)
				{
					if (!item.IsKeyProperty)
					{
						<div class="mesta main_border">
							<div class="__left">@item.Property</div><div class="__right">@item.Value</div>
						</div>
					}
				}			
			</div>
			<div id="more_info">
				<div id="box_more">
					<div id="more">
						Развернуть
						<img src="@ViewData["pathPrefix"]../images/icons/vnis_new.svg" alt="">
					</div>
					<div id="less">
						Свернуть
						<img src="@ViewData["pathPrefix"]../images/icons/vverh_new.svg" alt="">
					</div>
				</div>						
			</div>
		</div>				
	</div>
			
			
	<div id="call_us">
		<div style="margin: auto; width: 80%; margin-top: 20px; margin-bottom: 20px; font-size: 23px; line-height: 32px ;" >
			Для уточнения деталей и заказа авто свяжитесь с нами
			<a href="tel:375296349842"><b id="mynumber">+375296349842</b></a>
				<div class="tooltip"> 
					<div onclick="myFunction()" onmouseout="outFunc()">
					<span class="tooltiptext" id="myTooltip">Копировать</span>
					<img style="width: 20px;" src="../images/icons/copy.png" alt="">
					</div>
				</div>
				(все мессенджеры), либо заходите в наш телеграм-канал <a style="text-decoration: underline; font-style: italic;" href="https://t.me/it_car_by_channel">https://t.me/it_car_by_channel</a> 
		</div>						
	</div>
