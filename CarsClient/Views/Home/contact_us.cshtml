@{
    ViewData["Title"] = "Связаться с нами | IT-CAR.BY";
	ViewData["Description"] = "Связь с нами 24/7. Пишите, а лучше звоните, мы доступны всегда! Электромобили Tesla, Mercedes, BMW, Volkswagen, Toyota, Cherry, BYD, Xpeng, Weltmeister и др. в Минске | IT-CAR.BY";
	ViewData["activePage"] = "contact_usPage";
	Layout = "_Layout";
}

<div class="panel contact">
    <h1>Контакты</h1>
</div>
<p id="cont_us_p">Свяжитесь с нами</p>
<div class="container">
    <form id="idform" class="form" method="POST" action="@ViewData["mailAddress"]">
        <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Имя" required>
            <input type="email" name="email" class="form-control" placeholder="Электронная почта" required>
        </div>
        <div class="form-group">
            <input type="tel" name="phone" class="form-control" placeholder="Телефон">
            <input type="text" name="budget" class="form-control" placeholder="Ваш бюджет">
        </div>
        <div class="form-group">
            <textarea name="request" id="textar" cols="60" rows="6" placeholder="Пожалуйста, оставьте свои требования и пожелания, мы свяжемся в Вами в ближайшее время *" required></textarea>
        </div>
        <button type="reset">Очистить</button>
        <button type="submit">Отправить</button>
    </form>
</div>
